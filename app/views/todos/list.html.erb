<div class="container">
  <div class="col-lg-6">
    <h1>No completados</h1>
    <% @todos.each do |t| %>
    <% if t.completed == false %>
    <div class="well">
        <p><%= t.description%></p>
    </div>
    <% end %>
    <% end %>
  </div>

  <div class="container">
    <div class="col-lg-6">
    <h1>Completados</h1>
    <% @todos.each do |t| %>
    <% if t.completed  %>
    <div class="well">
        <p><%= t.description%></p>
    </div>
    <% end %>
    <% end %>
  </div>
  </div>
 </div>
